<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ManagementKeyPhraseFragment" 
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dip"
        android:orientation="vertical"
        >
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_toptitle_bg"
            >
            <ImageView android:id="@+id/btn_back_found_account_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/active_btn_back"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="アカウント選択"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
        </FrameLayout>
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="20dip"
            android:text="どのアカウントから話題を探しますか？\n(長押しで選択)"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            />
        
        <ListView android:id="@+id/list_found_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/trans"
            android:scrollingCache="false"
            android:fadingEdge="none"
            android:fadeScrollbars="false"
            android:divider="@color/trans"
            />
    </LinearLayout>
    
    <Button android:id="@+id/btn_launch_pick_up_topick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_gravity="bottom|center_horizontal"
        android:text="決定"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/active_btn_background"
        />
    
</FrameLayout>