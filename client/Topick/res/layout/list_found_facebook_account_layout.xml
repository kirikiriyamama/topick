<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
    
    <ImageView android:id="@+id/icon_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_facebook"
        />
    
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/account_background"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            >
            <TextView android:id="@+id/facebook_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="きゃべつ"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView android:id="@+id/facebook_account_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/black"
                android:textSize="15sp"
                />
            <TextView android:id="@+id/facebook_account_locale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日本"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <Button android:id="@+id/btn_show_detail_facebook_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="詳\n細"
            android:background="@drawable/active_btn_detail_background"
            android:layout_gravity="right|center_vertical"
            />
    </FrameLayout>

</LinearLayout>